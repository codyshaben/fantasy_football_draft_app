<h2>Create your account to setup your draft board!</h2>

<div>
    <%= form_for @user do |f| %>
        <p><%= f.label :name %></p>
        <p><%= f.text_field :name %></p><br>

        <p><%= f.label :username %></p>
        <p><%= f.text_field :username %></p><br>

        <%= f.label :password %>
        <%= f.password_field :password %><br>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %><br>

        <%= f.submit "Create Account" %>
    <% end %>
</div>